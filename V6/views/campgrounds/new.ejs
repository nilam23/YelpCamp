<%- include("../partials/header") %>

<div class="container">
    <h1 id="formHeader">Create a new Campground</h1>
    <div id="formBody">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Camp name" name="campName">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Image url" name="imageName">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Description" name="description">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go back to campgrounds</a>
    </div>
</div>

<%- include("../partials/footer") %>