<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="img-thumbnail">
                <img class="image-responsive" src="<%= campground.image %>" />
                <div class="caption-full">
                    <h4 id="floating">$9.00/night</h4>
                    <h3><a href=""><%= campground.name %></a></h4>
                        <h4><%= campground.description %></h5>
                            <h6><em>Submitted by <%= campground.author.username %></em></h6>
                </div>
            </div>
            <div class="well">
                <div class="text-right"><a class="btn btn-success btn-sm m-2"
                        href="/campgrounds/<%= campground._id %>/comments/new">Leave a review</a>
                </div>
                <hr>
                <% campground.comments.forEach(comment => { %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author.username %></strong>
                        <span id="floating">10 days ago</span>
                        <p>
                            <%= comment.text %>
                        </p>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>